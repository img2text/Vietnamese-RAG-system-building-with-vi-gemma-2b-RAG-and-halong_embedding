{
    "name": "Python 3.10 Dev Container",
    "image": "mcr.microsoft.com/vscode/devcontainers/python:3.10",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.10"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python", 
                "ms-python.vscode-pylance"
            ]
        }
    },
    "postCreateCommand": "pip install -r requirements.txt"
} 